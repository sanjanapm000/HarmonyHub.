<!-- Add CSS for zooming effect and modal -->
<style>
    .star-rating {
        color: gold;
    }

    .carousel-item img {
        width: 100%;
        height: auto;
        cursor: pointer; /* Show pointer to indicate clickable image */
    }

    /* Modal Styles */
    .modal {
        display: none; /* Hidden by default */
        position: fixed;
        z-index: 9999; /* Ensure it sits on top */
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7); /* Dark background */
        overflow: auto; /* Enable scrolling if content overflows */
        padding-top: 50px;
        text-align: center;
    }

    .modal-content {
        position: relative;
        margin: auto;
        max-width: 80%;
        background: #fff;
        padding: 20px;
    }

    .close {
        position: absolute;
        top: 15px;
        right: 15px;
        color: #fff;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
    }

    /* Zoomable Image */
    .zoomable-image {
        width: 100%;
        transition: transform 0.25s ease;
        cursor: zoom-in;
    }

    /* Zoom In/Out Style */
    .zoomable-image.zoom-in {
        cursor: zoom-out;
        transform: scale(1.5);
    }

    .zoomable-image.zoom-out {
        cursor: zoom-in;
        transform: scale(1);
    }
</style>

